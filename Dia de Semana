namespace semana
{
    programa de aula
    {
        static void Main (string [] args)
        {
            para (int i = 0; i <7; i ++)
            {

            int Ds = 0;
            Console.WriteLine ("Informe um número correspondente aos dias da semana:");
            Ds = int.Parse (Console.ReadLine ());



                interruptor (Ds)
                {
                    caso 1:
                        Console.WriteLine ("Hoje é Domingo:");
                        Console.WriteLine ("Churrasco, Pagode e Cerveja:");
                        quebrar;

                    caso 2:
                        Console.WriteLine ("Hoje é Segunda-Feira:");
                        Console.WriteLine ("Cansado do Domingo:");
                        quebrar;

                    caso 3:
                        Console.WriteLine ("Hoje é Terça-Feira:");
                        Console.WriteLine ("Dia Produtivo:");

                        quebrar;

                    caso 4:
                        Console.WriteLine ("Hoje é Quarta-Feira:");
                        Console.WriteLine ("Vai Timão:");
                        quebrar;

                    caso 5:
                        Console.WriteLine ("Hoje é Quinta-Feira:");
                        Console.WriteLine ("Pre-Sexta kkkkkkkkkkkk:");
                        quebrar;

                    caso 6:
                        Console.WriteLine ("Hoje é Sexta-Feira:");
                        Console.WriteLine ("Sextouuuuu papai:");
                        quebrar;

                    caso 7:
                        Console.WriteLine ("Hoje é Sábado:");
                        Console.WriteLine ("Sabado dia de trabalhar tambem:");
                        quebrar;

                    padrão:
                        Console.WriteLine ("Número não definido:");
